<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.fleamarket.domain.DiscussInfo" table="DISCUSS_INFO" catalog="ssh_t2">
        <id name="id" type="int">
            <column name="id" />
            <generator class="assigned" />
        </id>
        <many-to-one name="discussInfo" class="com.fleamarket.domain.DiscussInfo" fetch="select">
            <column name="goods_id" />
        </many-to-one>
        <many-to-one name="goods" class="com.fleamarket.domain.Goods" update="false" insert="false" fetch="select">
            <column name="goods_id" />
        </many-to-one>
        <property name="discussDate" type="date">
            <column name="discuss_date" length="10" />
        </property>
        <property name="discussedId" type="java.lang.Integer">
            <column name="discussed_id" />
        </property>
        <property name="imageAddress" type="string">
            <column name="image_address" length="100" />
        </property>
        <property name="text" type="string">
            <column name="text" length="145" />
        </property>
        <set name="discussInfos" table="DISCUSS_INFO" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="goods_id" />
            </key>
            <one-to-many class="com.fleamarket.domain.DiscussInfo" />
        </set>
    </class>
</hibernate-mapping>